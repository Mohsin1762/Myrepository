<p id="notice"><%= notice %></p>

<h1>Listing Animals</h1>




    <% @animals.each do |animal| %>
     <div class="row">
       <div class="col-xs-8 col-xs-offset-2">
         <div class="well well-lg">
           <div class="animal-name">

      <tr>
       <%=link_to animal.name ,animal_path(animal),style:"color:green"%>
      </div>

           <div class="animal-body">
        <%= truncate(animal.description,length:50 ,style:"color:yellow")%>
           </div>


           <div class="name-actions">

             <%= link_to 'Edit Animal', edit_animal_path(animal),class:"btn btn-xs btn-primary btn-offset-2" %>
             <%= link_to 'Delete Animal',animal_path(animal), method: :delete ,
                         data:{ confirm:"Are you sure you want to delete this animal?"},
                         class:"btn btn-xs btn-danger" %>
             <%= link_to 'Show Animal', animal_path(animal),class:"btn btn-xs btn-success" %>

           </div>

         </div>
       </div>
     </div>

    <% end %>

